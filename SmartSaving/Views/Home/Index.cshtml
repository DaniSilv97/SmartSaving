    ViewData["Title"] = "Home - SmartSaving";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<div class="relative bg-gradient-to-br from-blue-600 via-blue-700 to-indigo-800 overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                Take Control of Your
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-200 to-cyan-200">
                    Financial Future
                </span>
            </h1>
            <p class="text-xl md:text-2xl text-blue-100 mb-8 max-w-3xl mx-auto">
                Track expenses, monitor income, and achieve your savings goals with SmartSaving's intuitive financial management platform.
            </p>
            
            @if (ViewBag.User != null && ((SmartSaving.Models.User)ViewBag.User).Email != "guest@smart.saving.pt") {
                <!-- Authenticated User Actions -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="@Url.Action("Create", "Tracker")" 
                       class="bg-white hover:bg-gray-100 text-blue-700 font-semibold py-4 px-8 rounded-lg shadow-lg transition duration-300 transform hover:scale-105">
                        <span class="flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Create New Tracker
                        </span>
                    </a>
                    <a href="@Url.Action("Index", "Tracker")" 
                       class="bg-transparent hover:bg-white hover:text-blue-700 text-white border-2 border-white font-semibold py-4 px-8 rounded-lg transition duration-300">
                        View My Trackers
                    </a>
                </div>
            } else {
                <!-- Guest User Actions -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="@Url.Action("Register", "Auth")" 
                       class="bg-white hover:bg-gray-100 text-blue-700 font-semibold py-4 px-8 rounded-lg shadow-lg transition duration-300 transform hover:scale-105">
                        Get Started Free
                    </a>
                    <a href="@Url.Action("Login", "Auth")" 
                       class="bg-transparent hover:bg-white hover:text-blue-700 text-white border-2 border-white font-semibold py-4 px-8 rounded-lg transition duration-300">
                        Sign In
                    </a>
                </div>
            }
        </div>
    </div>
    
    <!-- Decorative Elements -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-400 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
        <div class="absolute top-40 left-1/2 w-80 h-80 bg-cyan-400 rounded-full mix-blend-multiply filter blur-xl opacity-70"></div>
    </div>
</div>

