<!-- Stats Section (for authenticated users) -->
@if (ViewBag.User != null && ((SmartSaving.Models.User)ViewBag.User).Email != "guest@smart.saving.pt") {
    <div class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    Welcome back, @((ViewBag.User as SmartSaving.Models.User)?.Name?.ToString() ?? "User")!
                </h2>
                <p class="text-xl text-gray-600">Here's a quick overview of your financial activity</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-8 text-center">
                    <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                        </svg>
                    </div>
                    <h3 class="text-2xl font-bold text-blue-600 mb-2">@(ViewBag.TrackerCount ?? 0)</h3>
                    <p class="text-blue-800 font-medium">Active Trackers</p>
                </div>
                
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-8 text-center">
                    <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                    </div>
                    @{
                        decimal currentBalance = ViewBag.CurrentMonthBalance ?? 0;
                        string balanceClass = currentBalance >= 0 ? "text-green-600" : "text-red-600";
                        string balanceSign = currentBalance >= 0 ? "" : "-";
                    }
                    <h3 class="text-2xl font-bold @balanceClass mb-2">@balanceSign€@Math.Abs(currentBalance).ToString("N2")</h3>
                    <p class="text-green-800 font-medium">This Month's Balance</p>
                </div>
                
                <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-8 text-center">
                    <div class="w-16 h-16 bg-purple-500 rounded-full flex items-center justify-center mx-auto mb-4">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                        </svg>
                    </div>
                    @{
                        decimal savingsRate = ViewBag.SavingsRate ?? 0;
                        string rateClass = savingsRate >= 0 ? "text-purple-600" : "text-red-600";
                    }
                    <h3 class="text-2xl font-bold @rateClass mb-2">@savingsRate.ToString("N1")%</h3>
                    <p class="text-purple-800 font-medium">Savings Rate</p>
                </div>
            </div>
            
            <div class="mt-12 text-center">
                <a href="@Url.Action("Index", "Tracker")" 
                   class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg shadow-lg transition duration-300 transform hover:scale-105 inline-flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                    </svg>
                    View All Trackers
                </a>
            </div>
            
            <!-- Additional Stats -->
            @if (ViewBag.TrackerCount > 0) {
                <div class="mt-12 bg-gray-50 rounded-xl p-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-6 text-center">Financial Overview</h3>
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                        <div class="text-center">
                            <h4 class="text-sm font-medium text-gray-600 mb-1">Total Balance</h4>
                            @{
                                decimal totalBalance = ViewBag.TotalBalance ?? 0;
                                string totalBalanceClass = totalBalance >= 0 ? "text-green-600" : "text-red-600";
                                string totalBalanceSign = totalBalance >= 0 ? "" : "-";
                            }
                            <p class="text-xl font-bold @totalBalanceClass">@totalBalanceSign€@Math.Abs(totalBalance).ToString("N2")</p>
                        </div>
                        
                        <div class="text-center">
                            <h4 class="text-sm font-medium text-gray-600 mb-1">Avg Monthly Income</h4>
                            <p class="text-xl font-bold text-green-600">€@((ViewBag.AverageMonthlyIncome ?? 0).ToString("N2"))</p>
                        </div>
                        
                        <div class="text-center">
                            <h4 class="text-sm font-medium text-gray-600 mb-1">Avg Monthly Expenses</h4>
                            <p class="text-xl font-bold text-red-600">€@((ViewBag.AverageMonthlyExpenses ?? 0).ToString("N2"))</p>
                        </div>
                        
                        <div class="text-center">
                            <h4 class="text-sm font-medium text-gray-600 mb-1">Last Activity</h4>
                            @if (ViewBag.LastActivityDate != null) {
                                <p class="text-xl font-bold text-blue-600">@(ViewBag.LastActivityDate.ToString("MMM yyyy"))</p>
                            } else {
                                <p class="text-xl font-bold text-gray-400">N/A</p>
                            }
                        </div>
                    </div>
                    
                    @if (ViewBag.MostRecentTracker != null) {
                        var recentTracker = (SmartSaving.Models.Tracker)ViewBag.MostRecentTracker;
                        
                        <div class="mt-6 pt-6 border-t border-gray-200 text-center">
                            <p class="text-sm text-gray-600 mb-2">Most Recent Tracker: <span class="font-medium">@recentTracker.Date.ToString("MMMM yyyy")</span></p>
                            <div class="flex justify-center space-x-6">
                                <span class="text-sm text-green-600">Income: €@recentTracker.TotalIncome.ToString("N2")</span>
                                <span class="text-sm text-red-600">Expenses: €@recentTracker.TotalExpenses.ToString("N2")</span>
                                @{
                                    string recentBalanceClass = recentTracker.Balance >= 0 ? "text-blue-600" : "text-orange-600";
                                }
                                <span class="text-sm @recentBalanceClass font-medium">Balance: €@recentTracker.Balance.ToString("N2")</span>
                            </div>
                        </div>
                    }
                </div>
            } else {
                <!-- Empty state for new users -->
                <div class="mt-12 bg-blue-50 border border-blue-200 rounded-xl p-8 text-center">
                    <svg class="mx-auto h-12 w-12 text-blue-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-blue-900 mb-2">Ready to start tracking?</h3>
                    <p class="text-blue-700 mb-4">Create your first tracker to begin monitoring your financial progress.</p>
                    <a href="@Url.Action("Create", "Tracker")" 
                       class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-300 inline-flex items-center">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Create First Tracker
                    </a>
                </div>
            }
        </div>
    </div>
}

